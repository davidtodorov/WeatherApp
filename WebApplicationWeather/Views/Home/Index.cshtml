@{
    ViewData["Title"] = "Home Page";
}
@model CityViewModel

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="row">
    <div class="form-group col-md-4" style="margin-top: 20px;">
        <label asp-for="Name">Enter a city</label>
        <input asp-for="Name" class="form-control" id="city-input" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group col-md-4" style="margin-top: 45px;">
        <button type="submit" class="btn btn-default search-city-btn">Submit</button>
    </div>

    <div class="form-group col-md-4" style="margin-top: 45px;">
        <label>Refresh time</label>
        <select class="btn btn-default" id="selectRefreshTime">
            <option value="900000"> 15 min </option>
            <option value="1800000"> 30 min </option>
            <option value="3600000"> 1h </option>
        </select>
    </div>
</div>

<ul id="cities-list" style="list-style-type: none; width: 300px;"></ul>

<table class="table table-bordered" id="weatherTable" style="display:none">
    <thead>
    <tr>
        <th class="col-md-4" id="weatherForCity"></th>
        <th class="col-md-4">Tempreture</th>
        <th class="col-md-4">Humidity</th>
    </tr>
    </thead>

    <tbody></tbody>
</table>

@section Scripts {
    <script src="~/js/weather.js"></script>
}
